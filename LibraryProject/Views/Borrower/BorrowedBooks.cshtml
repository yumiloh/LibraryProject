@model IEnumerable<LibraryProject.Models.BookModel>

@{
    ViewBag.Title = "BorrowedBooks";
}

<h2>Books borrowed</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookCopies)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BorrowedCopies)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookCopies)
            </td>
            <td>
                @Html.DisplayFor(modelItem=> item.BorrowedCopies)
            </td>
            <td>
                @Html.ActionLink("Return Book", "Return", new { id = item.ID })
            </td>

        </tr>
    }

</table>
<p> @Html.ActionLink("Back to Index", "Index")</p>
